from flask import Flask
app = Flask(__name__)
@app.route("/<opt>/<float:a>/<float:b>")
def show_post(opt,a,b):
    if opt=='add':
        ans = a+b
        return f'<h3>{a}+{b}={ans}</h3>'
    elif opt=='sub':
        ans = a-b
        return f'<h3>{a}-{b}={ans:.2f}</h3>'
    elif opt=='mul':
        ans = a*b
        return f'<h3>{a}*{b}={ans}</h3>'
    elif opt=='div':
        ans = a/b
        return f'<h3>{a}/{b}={ans}</h3>'

if __name__=="__main__":
    app.run(debug=True)
